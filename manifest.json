  "display_override": ["window-controls-overlay", "standalone"],
  "file_handlers": [
    {
      "action": "/handle-file",
      "accept": {
        "text/plain": [".txt"],
        "application/json": [".json"]
      }
    }
  ],
  "handle_links": "preferred",
  "widgets": [
    {
      "name": "Quiz Stats",
      "short_name": "Stats",
      "description": "Ver estadísticas rápidas",
      "tag": "quiz-stats",
      "template": "quiz-stats-template",
      "ms_ac_template": "ms-ac-template",
      "data": "/widget-data",
      "type": "application/json",
      "screenshots": [
        {
          "src": "/assets/screenshots/widget-screenshot.png",
          "sizes": "400x200",
          "type": "image/png"
        }
      ]
    }
