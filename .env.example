# ================================================
# QUIZ CRISTIANO - ENVIRONMENT VARIABLES
# ================================================

# ================================================
# GENERAL CONFIGURATION
# ================================================
NODE_ENV=development
APP_NAME=Quiz Cristiano
APP_VERSION=1.0.0
APP_URL=http://localhost:3000

# ================================================
# PAYPAL CONFIGURATION
# ================================================

# PayPal Client Credentials
# Get these from: https://developer.paypal.com/developer/applications/
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here

# PayPal Environment (sandbox or production)
PAYPAL_ENVIRONMENT=sandbox

# PayPal Webhook Configuration
# Create webhook at: https://developer.paypal.com/developer/applications/
PAYPAL_WEBHOOK_ID=your_webhook_id_here
PAYPAL_WEBHOOK_URL=https://your-domain.vercel.app/api/paypal/webhook

# ================================================
# CURRENCY CONFIGURATION
# ================================================
DEFAULT_CURRENCY=USD
SUPPORTED_CURRENCIES=USD,ARS

# Currency Exchange Rates (fallback values)
EXCHANGE_RATE_USD_TO_ARS=150.00

# ================================================
# PRODUCT PRICING CONFIGURATION
# ================================================

# Coin Packages (USD prices)
COINS_100_PRICE_USD=0.99
COINS_500_PRICE_USD=4.99
COINS_1000_PRICE_USD=9.99
COINS_5000_PRICE_USD=39.99

# Coin Packages (ARS prices)
COINS_100_PRICE_ARS=150
COINS_500_PRICE_ARS=750
COINS_1000_PRICE_ARS=1500
COINS_5000_PRICE_ARS=6000

# Premium Subscription Pricing
PREMIUM_MONTHLY_PRICE_USD=4.99
PREMIUM_MONTHLY_PRICE_ARS=750

# ================================================
# SECURITY CONFIGURATION
# ================================================

# JWT Secret for transaction tokens
JWT_SECRET=your_jwt_secret_here_minimum_32_characters

# Encryption key for sensitive data
ENCRYPTION_KEY=your_encryption_key_here_32_characters

# Rate limiting configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ================================================
# FIREBASE CONFIGURATION
# ================================================
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_STORAGE_BUCKET=your_project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_sender_id
FIREBASE_APP_ID=your_app_id

# ================================================
# MONITORING AND LOGGING
# ================================================

# Enable detailed logging
ENABLE_PAYMENT_LOGGING=true
ENABLE_ERROR_TRACKING=true

# Webhook retry configuration
WEBHOOK_MAX_RETRIES=3
WEBHOOK_RETRY_DELAY=1000

# ================================================
# DEVELOPMENT CONFIGURATION
# ================================================

# Enable development features
ENABLE_DEV_TOOLS=true
ENABLE_MOCK_PAYMENTS=false
ENABLE_TEST_WEBHOOKS=true

# ================================================
# PRODUCTION CONFIGURATION
# ================================================

# Production security settings
FORCE_HTTPS=true
ENABLE_CORS_RESTRICTIONS=true
ALLOWED_ORIGINS=https://your-domain.com

# Performance settings
ENABLE_CACHING=true
CACHE_TTL=3600